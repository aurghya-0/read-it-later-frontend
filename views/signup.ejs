<%- include('partials/header') %>
<section class="bg-light">
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-lg" style="max-width: 500px; width: 100%;">
      <div class="card-body p-5">
        <h1 class="h4 font-weight-bold text-center mb-4">Create your account</h1>
        <form action="/signup" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Your email</label>
            <input type="email" name="email" id="email" class="form-control" placeholder="name@company.com" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="••••••••" required>
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="••••••••" required>
          </div>
          <button type="submit" class="btn btn-primary w-100">Sign Up</button>
        </form>
        <div class="text-center mt-4">
          <p class="small">Already have an account? <a href="#" class="text-primary">Sign in</a></p>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('partials/footer') %>
