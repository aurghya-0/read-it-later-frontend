<%- include('partials/header') %>
  <!-- Form Container -->
  <div class="container py-4">
    <div class="bg-white shadow-sm rounded p-4">
      <h2 class="h5 font-weight-bold text-dark mb-4">Submit Article Link</h2>
      <form action="/add-article" method="POST">
        <div class="mb-3">
          <label for="articleLink" class="form-label">Article Link</label>
          <input type="url" name="articleLink" id="articleLink" class="form-control" placeholder="Enter the article URL" required>
        </div>
        <button type="submit" class="btn btn-primary">Add Article</button>
      </form>
    </div>
  </div>


<%- include('partials/footer') %>
