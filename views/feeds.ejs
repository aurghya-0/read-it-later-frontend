<%- include('partials/header') %>
    <div class="container-fluid mt-5">
        <div class="row">
            <!-- Sidebar for Feeds -->
            <div class="col-md-4 col-lg-3 border-right">
                <h1 class="h5 mb-4">RSS Feeds</h1>

                <!-- Form to add a new feed -->
                <form action="/feeds" method="POST" class="mb-4">
                    <div class="form-group">
                        <label for="title">Feed Title</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="url">Feed URL</label>
                        <input type="url" class="form-control" id="url" name="url" required>
                    </div>
                    <br/>
                    <button type="submit" class="btn btn-primary">Add Feed</button>
                </form>

                <h2 class="h6">Available Feeds</h2>
                <ul class="list-group mb-4 feeds-list">
                    <% feeds.forEach(feed=> { %>
                        <li class="list-group-item">
                            <a href="/feeds/<%= feed.id %>" class="text-primary text-decoration-none">
                                <%= feed.name %>
                            </a>
                        </li>
                        <% }) %>
                </ul>
            </div>

            <!-- Main Content Area for Articles -->
            <div class="col-md-8 col-lg-9">
                <h1 class="mb-4">Articles</h1>
                <div id="articles-content" class="articles-list">
                    <% if (selectedFeed && articles && articles.length> 0) { %>
                        <h2>Articles from <%= selectedFeed.name %>
                        </h2>
                        <div class="list-group">
                            <% articles.forEach(article=> { %>
                                <a href="<%= article.link %>" target="_blank"
                                    class="list-group-item list-group-item-action">
                                    <h5 class="mb-1">
                                        <%= article.title %>
                                    </h5>
                                    <small>Published on: <%= new Date(article.pubDate).toLocaleString() %></small>
                                    <br/>
                                    <button class="btn btn-secondary">Add Feed</button>
                                </a>
                                <% }) %>
                        </div>
                        <% } else if (selectedFeed) { %>
                            <div class="alert alert-info" role="alert">
                                No articles found in this feed.
                            </div>
                            <% } else { %>
                                <p class="text-muted">Select a feed to view its articles.</p>
                                <% } %>
                </div>
            </div>
        </div>
    </div>
    <%- include('partials/footer') %>
